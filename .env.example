# Medical AI Assistant Configuration

# ElevenLabs API Configuration
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/medical_ai_assistant
# For SQLite development: DATABASE_URL=sqlite:///./medical_ai_assistant.db

# Authentication
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Payment Configuration
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Application Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
DEBUG=true

# OpenAI API Configuration (for Medical LLM)
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Voice ID for text-to-speech
# Default voice ID is set in the code, but you can override it here
# VOICE_ID=your_preferred_voice_id

# Optional: Medical LLM Configuration
# MODEL=gpt-4  # or your preferred model
# MAX_TOKENS=500
# TEMPERATURE=0.7

# Optional: Server Configuration
# HOST=0.0.0.0
# PORT=8000
# DEBUG=False

# Optional: CORS Configuration
# ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
